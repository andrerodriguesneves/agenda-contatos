@** definir a classe de modelo desta página *@
@model AgendaContatos.Mvc.Models.AccountRegisterModel

@{
    //define o layout da página
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}

<div class="text-center">
    <h5 class="card-title">Criar Conta de Usuário</h5>
    <p class="card-text">Entre com seus dados:</p>
</div>

<hr/>

@using(Html.BeginForm())
{
     <div class="mb-2">
        <label>Entre com o seu nome:</label>
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
    </div>

    <div class="mb-2">
        <label>Entre com o seu email:</label>
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>

    <div class="mb-2">
        <label>Entre com a sua senha:</label>
        @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.Senha)
        </div>
    </div>

    <div class="mb-2">
        <label>Confirme a sua senha:</label>
         @Html.PasswordFor(model => model.SenhaConfirmacao, new { @class = "form-control" })
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.SenhaConfirmacao)
        </div>
    </div>

    <div class="mb-2 d-grid">
        <input type="submit" class="btn btn-success btn-sm"
            value="Realizar Cadastro"/>
    </div>

    <div class="mb-2 d-grid">
        <a href="/Account/Login" class="btn btn-light btn-sm">
            Já possui conta? <strong>Acesse aqui!</strong>
        </a>
    </div>
}
